int BS( int arr[], int s, int e, int val) {
    
      if ( s > e ) return -1 ;
    
       int mid = s+ (e-s)/2 ;
    
    if (arr[mid] == val) return mid ;
    
    if(arr[mid] > val) 
        return BS(arr, s, mid-1, val ) ;
    
    if (arr[mid]<val) 
        return BS(arr, mid+1, e , val) ; 
    
}

int binarySearch(int *input, int n, int val)
{
     return BS(input, 0, n-1, val ) ; 
}
