#include <iostream>

using namespace std;

int linearsearch(int arr[], int size, int elem) {
    if (size==0) return -1 ; 
    
    if (arr[0] == elem) return size ;
    
    linearsearch(arr+1 , size-1, elem) ; 
    
    
}

int main()
{
    int arr[5] = {1,2,3,4,5} ;
    
    int  a = linearsearch(arr, 5 ,5 ) ;
    cout << 5 - a  ;

    return 0;
}
